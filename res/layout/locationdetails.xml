<LinearLayout 
	android:id="@+id/LinearLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	
	android:background="@drawable/background"
	android:padding="5dip"
	xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
	android:id="@+id/ScrollLayout02" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbars="none"  
	>
<LinearLayout  
	android:id="@+id/LinearLayout02" 
	android:layout_width="fill_parent" 
	android:gravity="center_vertical"
	android:layout_height="wrap_content"
	android:paddingTop="2dip"
	android:paddingBottom="2dip"
	android:orientation="vertical">
	<LinearLayout 
		android:id="@+id/LinearLayout03" 
		android:paddingLeft="5dip"
		android:paddingRight="10dip"
		android:paddingBottom="5dip"
		android:paddingTop="10dip"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:minWidth="150dip"
		android:orientation="vertical">
	<TextView android:text="@+id/TextView01" 
			  android:id="@+id/TextView01"
			  android:typeface="sans"
			  android:textColor="#000000" 
			  
			  android:textSize="16dip"
			  android:textStyle="bold"
			  android:paddingLeft="10dip" 
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content">
	</TextView>
	
		<TableLayout android:layout_weight="4" android:paddingTop="20dip" android:id="@+id/TableLayout04" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_gravity="right|center_vertical" android:gravity="center_vertical" android:stretchColumns="1">
<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingRight="1dip" android:gravity="right">
<LinearLayout android:id="@+id/recommend" android:paddingLeft="5dip" android:layout_width="fill_parent" android:gravity="right|center_vertical" android:layout_height="fill_parent">
<ImageView android:id="@+id/share" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@layout/thumbsupbutton" android:paddingRight="5dip"></ImageView>
<ImageView android:id="@+id/ImageView02" android:gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@layout/mapbutton" android:paddingRight="5dip"></ImageView>
<ImageView android:id="@+id/call" android:src="@drawable/call" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
</LinearLayout>
</TableRow><TextView android:id="@+id/TextView07" android:textColor="#009ACD" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Location details"></TextView>
</TableLayout>
	
	<TextView android:text="@+id/TextView03" 
			  android:id="@+id/TextView03"
			  android:typeface="sans"
			  android:textColor="#000000"
			  android:paddingLeft="10dip"
			  android:paddingTop="20dip"
			  android:textStyle="bold"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content">
	</TextView>
	<TextView android:text="@+id/TextView04" 
			  android:id="@+id/TextView04"
			  android:textColor="#000000"
			  android:paddingLeft="10dip"
			  android:typeface="sans"
			  android:textStyle="bold"
			  android:layout_height="wrap_content" 
			  android:layout_width="fill_parent">
	</TextView>
	<TextView android:text="@+id/TextView05" 
			  android:id="@+id/TextView05"
			  android:textColor="#000000"
			  android:paddingLeft="10dip"
			  android:typeface="sans"
			  android:textStyle="bold"
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content">
	</TextView>
		
<TextView android:text="@+id/TextView06" android:paddingLeft="10dip" android:textColor="#000000" android:textStyle="bold" android:id="@+id/TextView06" android:layout_width="fill_parent" android:layout_height="wrap_content" android:paddingBottom="20dip"></TextView>
<TextView android:id="@+id/TextView08" android:layout_width="wrap_content" android:paddingBottom="10dip" android:textColor="#009ACD" android:layout_height="wrap_content" android:text="Location Description &amp; event details"></TextView><TextView android:text="@+id/TextView02" 
			  android:id="@+id/TextView02"
			  android:typeface="sans"
			  android:textColor="#000000"
			  android:paddingLeft="10dip" 
			  android:layout_width="wrap_content" 
			  android:layout_height="wrap_content">
</TextView>


</LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
